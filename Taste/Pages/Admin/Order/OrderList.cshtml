@page
@model Taste.Pages.Admin.Order.OrderListModel

@{ 
    var status = HttpContext.Request.Query["status"];
    var cancelled = "text-primary";
    var completed = "text-primary";
    var inprocess = "text-primary";

    if (status== "cancelled")
    {
        cancelled = "active text-white";
    }
    else
    {
        if (status == "completed")
        {
            completed = "active text-white";

        }
        else if (status == "inprocess")
        {
            inprocess = "active text-white";

        }
    }
}
<div class="border backgroundWhite container">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-primary">Order's List</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <li class="list-group-item @cancelled">
                    <a style="text-decoration:none" asp-page="OrderList" asp-route-status="cancelled">Cancelled</a>
                </li>
                <li class="list-group-item @completed">
                    <a style="text-decoration:none" asp-page="OrderList" asp-route-status="completed">Completed</a>
                </li>
                <li class="list-group-item @inprocess">
                    <a style="text-decoration:none" asp-page="OrderList" asp-route-status="inprocess">Inprocess</a>
                </li>
            </ul>
        </div>
    </div>
    <br /><br />
    <table id="DT_Load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Order Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Order Total</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/orderList.js"></script>
}

